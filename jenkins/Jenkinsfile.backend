pipeline {
    agent any
    
    environment {
        DOCKER_REGISTRY = 'docker.io'
        DOCKER_IMAGE = 'aminamrane/fastapi-backend'
        GIT_COMMIT_SHORT = sh(script: "git rev-parse --short HEAD", returnStdout: true).trim()
    }
    
    stages {
        stage('Checkout Backend Code') {
            steps {
                echo 'üîÑ Checking out backend repository...'
                git branch: 'main', 
                    url: 'https://github.com/Aminamrane/fastapi-backend.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                echo 'üì¶ Installing Python dependencies...'
                sh '''
                    python -m pip install --upgrade pip --break-system-packages
                    pip install --break-system-packages -e .
                '''
            }
        }
        
        stage('Code Quality - Linting') {
            steps {
                echo 'üîç Running linters...'
                sh '''
                    pip install ruff black --break-system-packages
                    ruff check . || true
                    black --check . || true
                '''
            }
        }
        
        stage('Security Scan') {
            steps {
                echo 'üõ°Ô∏è Running security scan...'
                sh '''
                    pip install bandit safety --break-system-packages
                    bandit -r app/ || true
                    safety check || true
                '''
            }
        }
        
        stage('Unit Tests') {
            steps {
                echo 'üß™ Running unit tests...'
                sh '''
                    pip install pytest pytest-cov --break-system-packages
                    pytest app/tests/ --cov=app --cov-report=xml --cov-report=html || true
                '''
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'üêã Building Docker image...'
                sh """
                    docker build -t ${DOCKER_IMAGE}:${GIT_COMMIT_SHORT} .
                    docker tag ${DOCKER_IMAGE}:${GIT_COMMIT_SHORT} ${DOCKER_IMAGE}:latest
                """
            }
        }
        
        stage('Push to Registry') {
            steps {
                echo 'üì§ Pushing Docker image to registry...'
                sh """
                    echo "Image ready: ${DOCKER_IMAGE}:${GIT_COMMIT_SHORT}"
                    # docker push ${DOCKER_IMAGE}:${GIT_COMMIT_SHORT}
                    # docker push ${DOCKER_IMAGE}:latest
                """
            }
        }
    }
    
    post {
        success {
            echo '‚úÖ Backend pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Backend pipeline failed!'
        }
        always {
            echo 'üßπ Cleaning up workspace...'
            cleanWs()
        }
    }
}