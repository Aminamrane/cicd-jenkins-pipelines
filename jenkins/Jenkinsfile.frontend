pipeline {
    agent any
    
    environment {
        DOCKER_REGISTRY = 'docker.io'
        DOCKER_IMAGE = 'aminamrane/react-frontend'
        GIT_COMMIT_SHORT = sh(script: "git rev-parse --short HEAD", returnStdout: true).trim()
    }
    
    stages {
        stage('Checkout Frontend Code') {
            steps {
                echo 'ğŸ”„ Checking out frontend repository...'
                git branch: 'main', 
                    url: 'https://github.com/Aminamrane/react-frontend.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¦ Installing Node dependencies...'
                sh '''
                    npm ci
                '''
            }
        }
        
        stage('Code Quality - Linting') {
            steps {
                echo 'ğŸ” Running ESLint and Prettier...'
                sh '''
                    npm run lint || true
                '''
            }
        }
        
        stage('TypeScript Check') {
            steps {
                echo 'ğŸ“˜ Running TypeScript compiler check...'
                sh '''
                    npx tsc --noEmit || true
                '''
            }
        }
        
        stage('Unit Tests') {
            steps {
                echo 'ğŸ§ª Running unit tests...'
                sh '''
                    npm run test:unit || true
                '''
            }
        }
        
        stage('Build Frontend') {
            steps {
                echo 'ğŸ—ï¸ Building React application...'
                sh '''
                    npm run build
                '''
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'ğŸ‹ Building Docker image...'
                sh """
                    docker build -t ${DOCKER_IMAGE}:${GIT_COMMIT_SHORT} .
                    docker tag ${DOCKER_IMAGE}:${GIT_COMMIT_SHORT} ${DOCKER_IMAGE}:latest
                """
            }
        }
        
        stage('Push to Registry') {
            steps {
                echo 'ğŸ“¤ Pushing Docker image to registry...'
                sh """
                    echo "Image ready: ${DOCKER_IMAGE}:${GIT_COMMIT_SHORT}"
                    # docker push ${DOCKER_IMAGE}:${GIT_COMMIT_SHORT}
                    # docker push ${DOCKER_IMAGE}:latest
                """
            }
        }
    }
    
    post {
        success {
            echo 'âœ… Frontend pipeline completed successfully!'
        }
        failure {
            echo 'âŒ Frontend pipeline failed!'
        }
        always {
            echo 'ğŸ§¹ Cleaning up workspace...'
            cleanWs()
        }
    }
}